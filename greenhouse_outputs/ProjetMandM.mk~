PASPROVENCE_VERSION = 1.0
PASPROVENCE_SITE = $(TOPDIR)/package/ProjetMandM
PASPROVENCE_SITE_METHOD = local
PASPROVENCE_LICENSE = GPLV3+

PASPROVENCE_DEPENDENCIES = linux

define PASPROVENCE_BUILD_CMDS
	$(MAKE) -C $(LINUX_DIR) $(LINUX_MAKE_FLAGS) M=$(@D)
endef

define PASPROVENCE_INSTALL_TARGET_CMDS
	$(MAKE) -C $(LINUX_DIR) $(LINUX_MAKE_FLAGS) M=$(@d) modules_install
endef

$(eval $(generic-package))
